@model List<Tarea>

<h2>Product List</h2>

<table class="table table-dark">
  <thead>
    <tr>
      <th hidden>ID</th>
      <th>Nombre</th>
      <th>Color</th>
      <th>Descripcion</th>
      <th>Estado</th>


      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var tarea in Model)
    {
      <tr>
        <td hidden>@tarea.Id</td>
        <td>@tarea.Nombre</td>
        <td>@tarea.Color</td>
        <td>@tarea.Descripcion</td>
        <td>@tarea.Estado</td>
        <td>
          <a asp-controller="Tarea" asp-action="EditarTarea" asp-route-idTarea="@tarea.Id">Editar</a>
          <a asp-controller="Tarea" asp-action="DeleteTarea" asp-route-idTarea="@tarea.Id"
            onclick="return confirm('Â¿Estas seguro que quieres eliminar el elemento?')">Eliminar</a>
        </td>
      </tr>
    }
  </tbody>
</table>

<a asp-controller="Tarea" asp-action="CrearTarea">Agregar Tarea</a>

<div class="card text-bg-primary mb-3" style="max-width: 18rem;">
  <div class="card-header">Header</div>
  <div class="card-body">
    <h5 class="card-title">Primary card title</h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.
    </p>
  </div>
</div>
