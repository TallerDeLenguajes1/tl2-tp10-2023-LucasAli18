@Model List<Usuario>

<h2>Usuarios</h2>


<table class="table table-dark">
  <thead>
    <tr>
      <th hidden>ID</th>
      <th>Nombre</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var usuario in Model)
    {
      <tr>
        <td hidden>@usuario.Id</td>
        <td>@usuario.NombreUsuario</td>
          <td>
            <button type="button" class="btn btn-secondary ">
              <a class="text-white text-decoration-none" asp-controller="Usuario" asp-action="EditarUsuario"
                asp-route-idUsuario="@usuario.Id">Editar</a>
            </button>

            <button type="button" class="btn btn-danger">
            <a class="text-white text-decoration-none" asp-controller="Usuario" asp-action="EliminarUsuario" asp-route-idUsuario="@usuario.Id"
              onclick="return confirm('¿Estas seguro que quieres eliminar el usuario @usuario.NombreUsuario? ')">
              Eliminar</a>
            </button>
          </td>

        @* <td>
      <a asp-controller="Producto" asp-action="EditarProducto" asp-route-idProducto="@producto.Id">Editar</a>
      <a asp-controller="Producto" asp-action="DeleteProducto" asp-route-idProducto="@producto.Id"
      onclick="return confirm('¿Estas seguro que quieres eliminar el elemento?')">Eliminar</a>
      </td> *@
      </tr>
    }
  </tbody>
</table>

  <a asp-controller="Usuario" asp-action="CrearUsuario">Agregar Usuario</a>
